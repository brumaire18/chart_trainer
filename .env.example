# Copy this file to .env and fill in your credentials
# Base URL (optional)
JQUANTS_BASE_URL=https://api.jquants.com

# New spec: set the refresh token issued from the J-Quants developer portal
JQUANTS_REFRESH_TOKEN=your_refresh_token_here

# Optional: legacy login for auto-refresh token retrieval
MAILADDRESS=your_email@example.com
PASSWORD=your_password_here

# Optional: client credentials (used when issuing a refresh token in the portal)
JQUANTS_CLIENT_ID=your_client_id_here
JQUANTS_CLIENT_SECRET=your_client_secret_here
# Optional: OAuth scope for the token issuance (example)
JQUANTS_TOKEN_SCOPE=read
